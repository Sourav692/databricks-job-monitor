{
    "system_tables": {
        "job_tables": {
            "jobs": "system.lakeflow.jobs",
            "job_tasks": "system.lakeflow.job_tasks",
            "job_run_timeline": "system.lakeflow.job_run_timeline",
            "job_task_run_timeline": "system.lakeflow.job_task_run_timeline"
        },
        "compute_tables": {
            "clusters": "system.compute.clusters",
            "node_types": "system.compute.node_types",
            "node_timeline": "system.compute.node_timeline"
        },
        "billing_tables": {
            "usage": "system.billing.usage",
            "list_prices": "system.billing.list_prices"
        },
        "access_tables": {
            "audit": "system.access.audit"
        }
    },
    "query_defaults": {
        "default_days_lookback": 7,
        "max_records_per_query": 10000,
        "timeout_seconds": 300
    },
    "monitoring_thresholds": {
        "job_duration_warning_minutes": 30,
        "job_duration_critical_minutes": 120,
        "cpu_utilization_warning": 75.0,
        "cpu_utilization_critical": 90.0,
        "memory_utilization_warning": 80.0,
        "memory_utilization_critical": 95.0,
        "failure_rate_warning": 0.05,
        "failure_rate_critical": 0.15
    },
    "dashboard_config": {
        "refresh_interval_seconds": 300,
        "chart_colors": {
            "primary": "#1f77b4",
            "success": "#2ca02c",
            "warning": "#ff7f0e",
            "danger": "#d62728",
            "info": "#17a2b8"
        },
        "max_items_in_charts": 50
    }
}